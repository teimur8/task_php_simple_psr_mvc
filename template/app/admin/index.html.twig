{% extends 'layout/default.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>Tasks edit</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Username
                        <a href="{{ path('admin', {}, {'username':'desc'}) }}">d</a>
                        <a href="{{ path('admin', {}, {'username':'asc'}) }}">a</a>
                    </th>
                    <th scope="col">Email
                        <a href="{{ path('admin', {}, {'email':'desc'}) }}">d</a>
                        <a href="{{ path('admin', {}, {'email':'asc'}) }}">a</a>
                    </th>
                    <th scope="col">Text</th>
                    <th scope="col">Status
                        <a href="{{ path('admin', {}, {'is_done':'desc'})  }}">d</a>
                        <a href="{{ path('admin', {}, {'is_done':'asc'})  }}">a</a>
                    </th>
                    <th scope="col"><a href="{{ path('tasks') }}">Actions</a></th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <th scope="row">{{ item.id }}</th>
                        <td>{{ item.username }}</td>
                        <td>{{ item.email }}</td>
                        <td>{{ item.text }}</td>
                        <td>{{ item.is_done?'Yes':'No' }}</td>
                        <td>
                            <a href="{{ path('admin.edit', {'id': item.id}) }}">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% if items.hasPages() %}
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        {% if items.onFirstPage() %}
                        {% else %}
                            <li class="page-item"><a class="page-link" href="{{ path('admin', {}, {"page":items.currentPage - 1}) }}">Previous</a></li>
                        {% endif %}

                        {% if items.hasMorePages() %}
                            <li class="page-item"><a class="page-link" href="{{ path('admin', {}, {"page":items.currentPage + 1}) }}">Next</a></li>
                        {% else %}
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
{% endblock %}
