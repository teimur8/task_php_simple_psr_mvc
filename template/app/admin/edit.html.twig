{% extends 'layout/default.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <h1>Tasks edit</h1>
    </div>
</div>

    <div class="row">
        <div class="col-md-12">
            <form method="post" action="{{  path('admin.update', {"id": item.id}) }}">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Username" value="{{ item.username }}" readonly>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Email" value="{{ item.email }}" readonly>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Text</label>
                            <textarea class="form-control" name="text" rows="3">{{ item.text }}</textarea>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="is_done" value="true" {{ item.is_done ? 'checked' : '' }}  id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                               Is Done
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
